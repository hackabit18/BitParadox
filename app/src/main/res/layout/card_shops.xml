<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1sp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2sp"
    app:cardCornerRadius="1sp"
    android:elevation="5sp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c29259c"
        >
<ImageView
    android:layout_width="130sp"
    android:layout_height="130sp"
    android:src="@drawable/common_google_signin_btn_icon_dark_focused"
    android:id="@+id/shop_pic"
    android:padding="3sp"
    />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shop_pic"
        android:text="Shop Freaky Name"
        android:textColor="#1b1b1b"
        android:layout_margin="10sp"
        android:textSize="15sp"
        android:id="@+id/shop_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_below="@+id/shop_name"
            android:text="A Short Description On What this particular shop is About"
            android:textSize="15sp"
            android:id="@+id/shop_desc"
            android:layout_marginLeft="10sp"/>




    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>